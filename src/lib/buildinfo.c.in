#include <lfp/buildinfo.h>

#include <string.h>

#define MAJOR__ (@LFP_MAJOR_VERSION@ << 16)
#define MINOR__ (@LFP_MINOR_VERSION@ <<  8)
#define MICRO__ @LFP_MICRO_VERSION@
#define VCSID__ "@LFP_VCSID@"

DSO_PUBLIC int
lfp_buildinfo(struct lfp_buildinfo *v)
{
    SYSCHECK(EINVAL, v == NULL);
    v->release = (uint64_t) MAJOR__ | MINOR__ | MICRO__;
    memset(v->vcsid, 0, sizeof(v->vcsid));
    // TODO: Switch sources to C11 and use _Static_assert.
    SYSCHECK(EINVAL, sizeof(VCSID__) > sizeof(v->vcsid));
    strncpy(v->vcsid, VCSID__, sizeof(v->vcsid));
    return 0;
}
